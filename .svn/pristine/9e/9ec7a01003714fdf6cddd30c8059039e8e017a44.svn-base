{% extends "base.html" %}

{% block content %}
<div class="page-header">
    <h1 class="page-title">Data Center Management System</h1>
    <p class="page-subtitle">Centralized infrastructure management and monitoring</p>
</div>

<!-- ========== SUMMARY CARDS ========== -->
<div class="dashboard-grid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total Servers</h5>
            <div class="card-value">0</div>
            <div class="card-subtitle">Active dedicated servers</div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Network Devices</h5>
            <div class="card-value">0</div>
            <div class="card-subtitle">Switches & Routers</div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">IP Addresses</h5>
            <div class="card-value">0</div>
            <div class="card-subtitle">Total allocated IPs</div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Data Centers</h5>
            <div class="card-value">{{ dc_count|default(0) }}</div>
            <div class="card-subtitle">Active locations</div>
        </div>
    </div>
</div>

<!-- ========== QUICK ACTIONS ========== -->
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Quick Actions</h5>
        <div class="row mt-3">
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary w-100">
                    <span style="margin-right: 8px;">➕</span>
                    Add New Server
                </button>
            </div>
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary w-100">
                    <span style="margin-right: 8px;">🌐</span>
                    Manage IP Addresses
                </button>
            </div>
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary w-100">
                    <span style="margin-right: 8px;">📊</span>
                    View Network Map
                </button>
            </div>
        </div>
    </div>
</div>

<!-- ========== SYSTEM STATUS ========== -->
<div class="card">
    <div class="card-body">
        <h5 class="card-title">System Status</h5>
        <div class="table-responsive">
            <table class="table table-dark-custom">
                <thead>
                    <tr>
                        <th>Data Center</th>
                        <th>Status</th>
                        <th>Servers</th>
                        <th>Utilization</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="4" class="text-center" style="color: #8b92a5;">No data centers configured</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- ========== RECENT ACTIVITY ========== -->
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Recent Activity</h5>
        <p style="color: #8b92a5;">No recent activity to display</p>
    </div>
</div>
{% endblock %}