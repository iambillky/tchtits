<!--
File: templates/ipam/vlans.html
Purpose: List all VLANs with their associated IP ranges and network details
Created: 2025-01-14
Author: DCMS Team

Revision History:
- v1.0.0: Initial creation with VLAN listing
          Shows VLAN number, name, type, and IP ranges
- v1.0.1: Enhanced to show gateways, netmasks, IP statistics, and utilization
          Added colocation client information display
-->

{% extends "base.html" %}

{% block title %}VLANs - IPAM{% endblock %}

{% block extra_css %}
<style>
    .vlan-badge {
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
    }
    
    .badge-private {
        background: rgba(168, 85, 247, 0.2);
        color: #a78bfa;
    }
    
    .badge-colo {
        background: rgba(236, 72, 153, 0.2);
        color: #f9a8d4;
    }
    
    .badge-vps {
        background: rgba(34, 197, 94, 0.2);
        color: #86efac;
    }
    
    .badge-vrf {
        background: rgba(251, 146, 60, 0.2);
        color: #fdba74;
    }
    
    .ip-range-detail {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 6px;
        padding: 8px 12px;
        margin: 4px 0;
        font-size: 0.85rem;
    }
    
    .range-stats {
        display: inline-block;
        margin-left: 10px;
        color: #8b92a5;
    }
    
    .utilization-mini {
        display: inline-block;
        width: 60px;
        height: 4px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 2px;
        margin-left: 8px;
        vertical-align: middle;
    }
    
    .utilization-mini-fill {
        height: 100%;
        border-radius: 2px;
        transition: width 0.3s ease;
    }
    
    .client-info {
        font-size: 0.85rem;
        color: #60a5fa;
        margin-top: 4px;
    }
    
    .expandable-row {
        cursor: pointer;
    }
    
    .expandable-row:hover {
        background: rgba(255, 255, 255, 0.02);
    }
    
    .network-details {
        padding: 15px;
        background: rgba(0, 0, 0, 0.3);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
</style>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">VLAN Configuration</h1>
            <p class="page-subtitle">Complete network details for all VLANs</p>
        </div>
        <div>
            <a href="{{ url_for('ipam.colo_clients') }}" class="btn btn-outline-primary">
                <span style="margin-right: 8px;">üë•</span> Colo Clients
            </a>
            <a href="{{ url_for('ipam.add_vlan') }}" class="btn btn-primary">
                <span style="margin-right: 8px;">üîß</span> Add VLAN
            </a>
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card">
            <div class="card-body text-center">
                <h3 style="color: #fff;">{{ total_vlans }}</h3>
                <p class="mb-0">Total VLANs</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card">
            <div class="card-body text-center">
                <h3 style="color: #60a5fa;">{{ public_vlans }}</h3>
                <p class="mb-0">Public</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card">
            <div class="card-body text-center">
                <h3 style="color: #a78bfa;">{{ private_vlans }}</h3>
                <p class="mb-0">Private</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card">
            <div class="card-body text-center">
                <h3 style="color: #f9a8d4;">{{ colo_vlans }}</h3>
                <p class="mb-0">Colocation</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card">
            <div class="card-body text-center">
                <h3 style="color: #86efac;">{{ vps_vlans }}</h3>
                <p class="mb-0">VPS Pool</p>
            </div>
        </div>
    </div>
</div>

{% if vlans %}
<div class="card">
    <div class="card-body">
        <table class="table table-dark-custom">
            <thead>
                <tr>
                    <th style="width: 80px;">VLAN</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Client</th>
                    <th>IP Statistics</th>
                    <th style="width: 100px;">Utilization</th>
                    <th style="width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for vlan in vlans %}
                <tr class="expandable-row" onclick="toggleVlanDetails('vlan-{{ vlan.id }}')">
                    <td>
                        <strong style="color: #60a5fa;">{{ vlan.vlan_number }}</strong>
                    </td>
                    <td>
                        {{ vlan.name or '-' }}
                        {% if vlan.vrf %}
                            <span class="vlan-badge badge-vrf">{{ vlan.vrf }}</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if vlan.is_private %}
                            <span class="vlan-badge badge-private">Private</span>
                        {% endif %}
                        {% if vlan.is_colo %}
                            <span class="vlan-badge badge-colo">Colo</span>
                        {% endif %}
                        {% if vlan.is_vps %}
                            <span class="vlan-badge badge-vps">VPS</span>
                        {% endif %}
                        {% if not vlan.is_private and not vlan.is_colo and not vlan.is_vps %}
                            <span class="vlan-badge" style="background: rgba(96, 165, 250, 0.2); color: #60a5fa;">Public</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if vlan.colo_client_name %}
                            <div class="client-info">
                                {{ vlan.colo_client_name }}
                                {% if vlan.colo_client_id %}
                                    <small>(#{{ vlan.colo_client_id }})</small>
                                {% endif %}
                            </div>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        {% if vlan.stats.total_ips > 0 %}
                            <span style="color: #22c55e;">{{ vlan.stats.available }}</span> available /
                            <span style="color: #3b82f6;">{{ vlan.stats.assigned }}</span> assigned /
                            <span style="color: #fff;">{{ vlan.stats.total_ips }}</span> total
                            {% if vlan.stats.quarantine > 0 %}
                                <span style="color: #f59e0b;">({{ vlan.stats.quarantine }} in quarantine)</span>
                            {% endif %}
                        {% else %}
                            <span class="text-muted">No IP ranges</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if vlan.stats.total_ips > 0 %}
                            <div style="display: flex; align-items: center;">
                                <span style="font-size: 0.85rem; margin-right: 8px;">{{ vlan.stats.utilization }}%</span>
                                <div class="utilization-mini">
                                    <div class="utilization-mini-fill" 
                                         style="width: {{ vlan.stats.utilization }}%;
                                                background: {% if vlan.stats.utilization < 50 %}#22c55e{% elif vlan.stats.utilization < 80 %}#f59e0b{% else %}#ef4444{% endif %};">
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="{{ url_for('ipam.vlan_detail', vlan_id=vlan.id) }}" 
                               class="btn btn-outline-primary" title="View Details">
                                <span>üëÅÔ∏è</span>
                            </a>
                            <a href="{{ url_for('ipam.add_range') }}?vlan_id={{ vlan.id }}" 
                               class="btn btn-outline-success" title="Add IP Range">
                                <span>‚ûï</span>
                            </a>
                            <button class="btn btn-outline-danger" title="Delete VLAN">
                                <span>üóëÔ∏è</span>
                            </button>
                        </div>
                    </td>
                </tr>
                
                <!-- Expandable Network Details Row -->
                <tr id="vlan-{{ vlan.id }}" style="display: none;">
                    <td colspan="7" class="network-details">
                        {% if vlan.stats.ranges %}
                            <h6 style="color: #fff; margin-bottom: 15px;">IP Ranges in VLAN {{ vlan.vlan_number }}</h6>
                            <div class="row">
                                {% for range in vlan.stats.ranges %}
                                <div class="col-md-6 mb-3">
                                    <div class="ip-range-detail">
                                        <div style="margin-bottom: 8px;">
                                            <strong style="color: #60a5fa;">{{ range.start_ip }} - {{ range.end_ip }}</strong>
                                            {% if range.network %}
                                                <span style="color: #8b92a5; margin-left: 10px;">
                                                    ({{ range.network.network }})
                                                </span>
                                            {% endif %}
                                        </div>
                                        
                                        <div style="display: grid; grid-template-columns: 120px 1fr; gap: 8px; font-size: 0.85rem;">
                                            <div style="color: #8b92a5;">Gateway:</div>
                                            <div style="color: #fff;">{{ range.gateway or 'Not configured' }}</div>
                                            
                                            <div style="color: #8b92a5;">Netmask:</div>
                                            <div style="color: #fff;">{{ range.netmask or 'Not configured' }}</div>
                                            
                                            <div style="color: #8b92a5;">Available IPs:</div>
                                            <div>
                                                <span style="color: #22c55e;">{{ range.available }}</span> / {{ range.total }}
                                                ({{ range.utilization }}% used)
                                            </div>
                                            
                                            <div style="color: #8b92a5;">Assigned IPs:</div>
                                            <div style="color: #3b82f6;">{{ range.assigned }}</div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            
                            {% if vlan.description %}
                            <div style="margin-top: 15px; padding: 10px; background: rgba(255, 255, 255, 0.03); border-radius: 6px;">
                                <strong>Description:</strong> {{ vlan.description }}
                            </div>
                            {% endif %}
                        {% else %}
                            <p class="text-muted">No IP ranges configured for this VLAN.</p>
                            <a href="{{ url_for('ipam.add_range') }}?vlan_id={{ vlan.id }}" class="btn btn-sm btn-primary">
                                Add First IP Range
                            </a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% else %}
<div class="card">
    <div class="card-body text-center py-5">
        <h3>No VLANs Configured</h3>
        <p class="text-muted">Start by adding your first VLAN</p>
        <a href="{{ url_for('ipam.add_vlan') }}" class="btn btn-primary mt-3">
            <span style="margin-right: 8px;">üîß</span> Add First VLAN
        </a>
    </div>
</div>
{% endif %}
{% endblock %}

{% block extra_js %}
<script>
function toggleVlanDetails(vlanId) {
    const detailRow = document.getElementById(vlanId);
    if (detailRow.style.display === 'none') {
        detailRow.style.display = 'table-row';
    } else {
        detailRow.style.display = 'none';
    }
}
</script>
{% endblock %}