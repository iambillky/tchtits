File: templates/pdus/edit_pdu.html
Purpose: Form template for editing existing PDUs
Version: 1.1.0
Author: DCMS Team

Revision History:
- v1.0.0: Initial creation with edit form functionality
- v1.1.0: Removed manufacturer field (100% APC equipped), kept model field only
-->

{% extends "base.html" %}

{% block title %}Edit PDU{% endblock %}

{% block extra_css %}
<style>
    /* ========== PDU INFO BAR ========== */
    .pdu-info-bar {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(251, 191, 36, 0.05));
        border: 1px solid rgba(245, 158, 11, 0.2);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .pdu-info-content {
        flex: 1;
    }
    
    .pdu-current-id {
        color: #f59e0b;
        font-size: 2rem;
        font-weight: 700;
        font-family: 'Courier New', monospace;
        margin-bottom: 5px;
    }
    
    .pdu-current-location {
        color: #e4e6eb;
        font-size: 1.1rem;
    }
    
    .pdu-stats {
        text-align: right;
    }
    
    .pdu-stat-item {
        color: #8b92a5;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }
    
    .pdu-stat-value {
        color: #f59e0b;
        font-weight: 600;
    }
    
    /* ========== INFO BOX ========== */
    .info-box {
        background: rgba(96, 165, 250, 0.1);
        border: 1px solid rgba(96, 165, 250, 0.2);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
    }
    
    .info-box-title {
        color: #60a5fa;
        font-weight: 600;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .info-box-content {
        color: #e4e6eb;
        font-size: 0.95rem;
        line-height: 1.6;
    }
    
    /* ========== FORM CONTAINER ========== */
    .form-container {
        max-width: 900px;
        margin: 0 auto;
    }
    
    .form-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 30px;
    }
    
    /* ========== FORM SECTIONS ========== */
    .form-section {
        margin-bottom: 35px;
    }
    
    .form-section-title {
        color: #f59e0b;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    /* ========== FORM GROUPS ========== */
    .form-group {
        margin-bottom: 25px;
    }
    
    .form-label {
        display: block;
        color: #e4e6eb;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }
    
    .form-label .required {
        color: #ef4444;
        margin-left: 3px;
    }
    
    /* ========== FORM CONTROLS ========== */
    .form-control {
        width: 100%;
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        padding: 10px 14px;
        color: #fff;
        font-size: 1rem;
        transition: all 0.2s ease;
    }
    
    .form-control:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.1);
        border-color: #f59e0b;
        box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
    }
    
    .form-control::placeholder {
        color: #6b7280;
    }
    
    .form-control:disabled {
        background: rgba(255, 255, 255, 0.03);
        border-color: rgba(255, 255, 255, 0.08);
        color: #6b7280;
        cursor: not-allowed;
    }
    
    select.form-control {
        cursor: pointer;
    }
    
    textarea.form-control {
        resize: vertical;
        min-height: 100px;
        font-family: inherit;
    }
    
    /* ========== VALIDATION ========== */
    .invalid-feedback {
        display: block;
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: 5px;
    }
    
    .form-control.is-invalid {
        border-color: #ef4444;
    }
    
    /* ========== HELP TEXT ========== */
    .form-text {
        display: block;
        color: #8b92a5;
        font-size: 0.875rem;
        margin-top: 5px;
    }
    
    /* ========== OUTLET USAGE ========== */
    .outlet-usage {
        background: rgba(245, 158, 11, 0.05);
        border: 1px solid rgba(245, 158, 11, 0.2);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
    }
    
    .outlet-bar {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 6px;
        height: 30px;
        position: relative;
        overflow: hidden;
        margin-top: 10px;
    }
    
    .outlet-fill {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        height: 100%;
        transition: width 0.3s ease;
    }
    
    .outlet-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    /* ========== WARNING BOX ========== */
    .warning-box {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.2);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }
    
    .warning-icon {
        color: #ef4444;
        font-size: 1.2rem;
        flex-shrink: 0;
    }
    
    .warning-content {
        flex: 1;
        color: #f87171;
        font-size: 0.95rem;
    }
    
    /* ========== RESPONSIVE GRID ========== */
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }
    
    .form-row-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }
    
    /* ========== BUTTON GROUP ========== */
    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .btn-success {
        background: linear-gradient(135deg, #10b981, #059669);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
        cursor: pointer;
    }
    
    .btn-success:hover {
        background: linear-gradient(135deg, #059669, #047857);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }
    
    .btn-cancel {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #e4e6eb;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
        text-decoration: none;
        cursor: pointer;
    }
    
    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.15);
        color: #fff;
        text-decoration: none;
    }
    
    .btn-danger {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
        cursor: pointer;
        margin-left: auto;
    }
    
    .btn-danger:hover {
        background: linear-gradient(135deg, #dc2626, #b91c1c);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }
    
    @media (max-width: 768px) {
        .form-row, .form-row-3 {
            grid-template-columns: 1fr;
        }
        
        .pdu-info-bar {
            flex-direction: column;
            text-align: center;
        }
        
        .pdu-stats {
            text-align: center;
            margin-top: 20px;
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1 class="page-title">Edit PDU</h1>
    <p class="page-subtitle">Modify power distribution unit configuration</p>
</div>

<!-- ========== PDU INFO BAR ========== -->
<div class="pdu-info-bar">
    <div class="pdu-info-content">
        <div class="pdu-current-id">{{ pdu.identifier }}</div>
        <div class="pdu-current-location">Rack: {{ pdu.rack.rack_id }}</div>
    </div>
    <div class="pdu-stats">
        <div class="pdu-stat-item">
            Capacity: <span class="pdu-stat-value">{{ pdu.capacity_amps }}A / {{ pdu.voltage }}V</span>
        </div>
        <div class="pdu-stat-item">
            Outlets: <span class="pdu-stat-value">{{ pdu.used_outlets }}/{{ pdu.total_outlets }}</span>
        </div>
        <div class="pdu-stat-item">
            Max Power: <span class="pdu-stat-value">{{ pdu.watts_capacity }}W</span>
        </div>
    </div>
</div>

<div class="form-container">
    <div class="form-card">
        <!-- ========== OUTLET USAGE DISPLAY ========== -->
        <div class="outlet-usage">
            <h4 style="color: #f59e0b; margin-bottom: 10px;">Current Outlet Usage</h4>
            <div class="outlet-bar">
                <div class="outlet-fill" style="width: {{ (pdu.used_outlets / pdu.total_outlets * 100) if pdu.total_outlets > 0 else 0 }}%;"></div>
                <div class="outlet-text">{{ pdu.used_outlets }} of {{ pdu.total_outlets }} outlets in use</div>
            </div>
            <p style="color: #8b92a5; font-size: 0.9rem; margin-top: 10px;">
                {{ pdu.available_outlets }} outlets available
            </p>
        </div>
        
        {% if pdu.used_outlets > 0 %}
        <!-- ========== WARNING MESSAGE ========== -->
        <div class="warning-box">
            <span class="warning-icon">‚ö†Ô∏è</span>
            <div class="warning-content">
                <strong>Note:</strong> This PDU has {{ pdu.used_outlets }} device(s) connected. 
                Reducing outlet count below this value is not allowed. Check connected devices before making changes.
            </div>
        </div>
        {% endif %}
        
        <form method="POST" action="{{ url_for('pdus.edit_pdu', pdu_id=pdu.id) }}" novalidate>
            {{ form.hidden_tag() }}
            
            <!-- ========== IDENTIFICATION ========== -->
            <div class="form-section">
                <h3 class="form-section-title">PDU Identification</h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="{{ form.identifier.id }}" class="form-label">
                            PDU Identifier <span class="required">*</span>
                        </label>
                        {{ form.identifier(class="form-control" + (" is-invalid" if form.identifier.errors else "")) }}
                        <small class="form-text">How this PDU is labeled (e.g., APC 1, APC 2)</small>
                        {% if form.identifier.errors %}
                            {% for error in form.identifier.errors %}
                                <div class="invalid-feedback">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        <label for="{{ form.circuit_id.id }}" class="form-label">
                            Circuit ID
                        </label>
                        {{ form.circuit_id(class="form-control") }}
                        <small class="form-text">Electrical circuit identifier</small>
                        {% if form.circuit_id.errors %}
                            {% for error in form.circuit_id.errors %}
                                <div class="invalid-feedback">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
                
                <!-- Rack location (read-only) -->
                <div class="form-group">
                    <label class="form-label">Rack Location</label>
                    <input type="text" class="form-control" value="{{ pdu.rack.rack_id }}" disabled>
                    <small class="form-text">Cannot be changed after creation</small>
                </div>
            </div>
            
            <!-- ========== HARDWARE INFORMATION ========== -->
            <div class="form-section">
                <h3 class="form-section-title">Hardware Information</h3>
                
                <div class="info-box">
                    <div class="info-box-title">
                        <span>‚ÑπÔ∏è</span>
                        <span>APC Model Information</span>
                    </div>
                    <div class="info-box-content">
                        Track the specific APC model number when swapping out PDU hardware. This helps identify outlet configurations and capabilities.
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="{{ form.model.id }}" class="form-label">
                        APC Model Number
                    </label>
                    {{ form.model(class="form-control", placeholder="AP7932, AP8941, AP8868, etc.") }}
                    <small class="form-text">Specific APC PDU model for reference</small>
                    {% if form.model.errors %}
                        {% for error in form.model.errors %}
                            <div class="invalid-feedback">{{ error }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            
            <!-- ========== ELECTRICAL SPECIFICATIONS ========== -->
            <div class="form-section">
                <h3 class="form-section-title">Electrical Specifications</h3>
                
                <div class="form-row-3">
                    <div class="form-group">
                        <label for="{{ form.capacity_amps.id }}" class="form-label">
                            Capacity (Amps) <span class="required">*</span>
                        </label>
                        {{ form.capacity_amps(class="form-control" + (" is-invalid" if form.capacity_amps.errors else "")) }}
                        <small class="form-text">15A or 30A typically</small>
                        {% if form.capacity_amps.errors %}
                            {% for error in form.capacity_amps.errors %}
                                <div class="invalid-feedback">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        <label for="{{ form.voltage.id }}" class="form-label">
                            Voltage <span class="required">*</span>
                        </label>
                        {{ form.voltage(class="form-control") }}
                        {% if form.voltage.errors %}
                            {% for error in form.voltage.errors %}
                                <div class="invalid-feedback">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        <label for="{{ form.phase.id }}" class="form-label">
                            Phase <span class="required">*</span>
                        </label>
                        {{ form.phase(class="form-control") }}
                        {% if form.phase.errors %}
                            {% for error in form.phase.errors %}
                                <div class="invalid-feedback">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- ========== OUTLET CONFIGURATION ========== -->
            <div class="form-section">
                <h3 class="form-section-title">Outlet Configuration</h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="{{ form.total_outlets.id }}" class="form-label">
                            Total Outlets <span class="required">*</span>
                        </label>
                        {{ form.total_outlets(class="form-control" + (" is-invalid" if form.total_outlets.errors else ""),
                                             min=pdu.used_outlets if pdu.used_outlets > 0 else 1) }}
                        <small class="form-text">
                            {% if pdu.used_outlets > 0 %}
                                Minimum: {{ pdu.used_outlets }} (currently in use)
                            {% else %}
                                Number of available outlets on this PDU
                            {% endif %}
                        </small>
                        {% if form.total_outlets.errors %}
                            {% for error in form.total_outlets.errors %}
                                <div class="invalid-feedback">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Outlets In Use</label>
                        <input type="text" class="form-control" value="{{ pdu.used_outlets }}" disabled>
                        <small class="form-text">Automatically tracked by connected devices</small>
                    </div>
                </div>
            </div>
            
            <!-- ========== MANAGEMENT ========== -->
            <div class="form-section">
                <h3 class="form-section-title">Management</h3>
                
                <div class="form-group">
                    <label for="{{ form.ip_address.id }}" class="form-label">
                        Management IP Address
                    </label>
                    {{ form.ip_address(class="form-control" + (" is-invalid" if form.ip_address.errors else "")) }}
                    <small class="form-text">IP address for managed PDUs (optional)</small>
                    {% if form.ip_address.errors %}
                        {% for error in form.ip_address.errors %}
                            <div class="invalid-feedback">{{ error }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            
            <!-- ========== NOTES ========== -->
            <div class="form-section">
                <h3 class="form-section-title">Notes</h3>
                
                <div class="form-group">
                    <label for="{{ form.notes.id }}" class="form-label">
                        Additional Notes
                    </label>
                    {{ form.notes(class="form-control") }}
                    <small class="form-text">Any additional information about this PDU</small>
                    {% if form.notes.errors %}
                        {% for error in form.notes.errors %}
                            <div class="invalid-feedback">{{ error }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            
            <!-- ========== ACTION BUTTONS ========== -->
            <div class="button-group">
                <button type="submit" class="btn btn-success">
                    <span style="margin-right: 8px;">üíæ</span> Save Changes
                </button>
                <a href="{{ url_for('pdus.index') }}" class="btn btn-cancel">
                    <span style="margin-right: 8px;">‚úï</span> Cancel
                </a>
                
                {% if pdu.used_outlets == 0 %}
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                    <span style="margin-right: 8px;">üóëÔ∏è</span> Delete PDU
                </button>
                {% endif %}
            </div>
        </form>
        
        <!-- Hidden delete form -->
        {% if pdu.used_outlets == 0 %}
        <form id="deleteForm" method="POST" action="{{ url_for('pdus.delete_pdu', pdu_id=pdu.id) }}" style="display: none;">
        </form>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
// ========== DELETE CONFIRMATION ==========
{% if pdu.used_outlets == 0 %}
function confirmDelete() {
    if (confirm('Are you sure you want to delete PDU {{ pdu.identifier }}? This action cannot be undone.')) {
        document.getElementById('deleteForm').submit();
    }
}
{% endif %}

// ========== MINIMUM OUTLET ENFORCEMENT ==========
{% if pdu.used_outlets > 0 %}
document.getElementById('{{ form.total_outlets.id }}').addEventListener('change', function(e) {
    const minOutlets = {{ pdu.used_outlets }};
    if (parseInt(e.target.value) < minOutlets) {
        e.target.value = minOutlets;
        alert(`Cannot set outlet count below ${minOutlets} as ${minOutlets} outlets are currently in use.`);
    }
});
{% endif %}

// ========== FORM VALIDATION FEEDBACK ==========
document.querySelectorAll('.form-control').forEach(function(input) {
    input.addEventListener('input', function() {
        if (this.classList.contains('is-invalid')) {
            this.classList.remove('is-invalid');
            const feedback = this.parentElement.querySelectorAll('.invalid-feedback');
            feedback.forEach(function(msg) {
                msg.style.display = 'none';
            });
        }
    });
});

// ========== CALCULATE WATTS DISPLAY ==========
function updateWattsDisplay() {
    const amps = parseFloat(document.getElementById('{{ form.capacity_amps.id }}').value) || 0;
    const volts = parseInt(document.getElementById('{{ form.voltage.id }}').value) || 0;
    const watts = amps * volts;
    
    // Update the display in the info bar if needed
    console.log(`Power Capacity: ${watts}W (${amps}A @ ${volts}V)`);
}

// Update on change
document.getElementById('{{ form.capacity_amps.id }}').addEventListener('change', updateWattsDisplay);
document.getElementById('{{ form.voltage.id }}').addEventListener('change', updateWattsDisplay);
</script>
{% endblock %}