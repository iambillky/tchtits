<!--
File: templates/pdus/outlet_view.html
Purpose: Detailed outlet mapping view for a PDU showing what's plugged where
Version: 1.2.0
Author: DCMS Team

Revision History:
- v1.0.0: Initial creation with visual outlet map
         Shows Bank 1 (1-12) and Bank 2 (13-24) separately
         Displays connected devices with quick links
         Load balancing visualization per bank
- v1.1.0: Added Model display in stats grid
         Added Notes section below header
         Complete PDU information display
- v1.2.0: Made occupied outlets clickable to navigate to connected device
         Enhanced tooltips to indicate clickability
-->

{% extends "base.html" %}

{% block title %}PDU Outlet Map - {{ pdu.identifier }}{% endblock %}

{% block extra_css %}
<style>
    /* ========== PDU HEADER ========== */
    .pdu-header {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(251, 191, 36, 0.05));
        border: 1px solid rgba(245, 158, 11, 0.2);
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 30px;
    }
    
    .pdu-title-section {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
    }
    
    .pdu-title {
        color: #f59e0b;
        font-size: 2.5rem;
        font-weight: 700;
        font-family: 'Courier New', monospace;
        margin-bottom: 10px;
    }
    
    .pdu-location {
        color: #e4e6eb;
        font-size: 1.2rem;
        margin-bottom: 5px;
    }
    
    .pdu-circuit {
        color: #8b92a5;
        font-size: 1rem;
    }
    
    .pdu-actions {
        display: flex;
        gap: 10px;
    }
    
    /* ========== PDU STATS ========== */
    .pdu-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-label {
        color: #8b92a5;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 5px;
    }
    
    .stat-value {
        color: #fbbf24;
        font-size: 1.5rem;
        font-weight: 600;
    }
    
    /* ========== NOTES SECTION ========== */
    .pdu-notes-section {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(245, 158, 11, 0.15);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 30px;
    }
    
    .notes-header {
        color: #f59e0b;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .notes-header i {
        font-size: 0.95rem;
    }
    
    .notes-content {
        color: #e4e6eb;
        font-size: 0.95rem;
        line-height: 1.6;
        white-space: pre-wrap;
    }
    
    .no-notes {
        color: #8b92a5;
        font-style: italic;
        font-size: 0.9rem;
    }
    
    /* ========== BANK SECTIONS ========== */
    .banks-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 30px;
    }
    
    .bank-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 20px;
    }
    
    .bank-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .bank-title {
        color: #f59e0b;
        font-size: 1.3rem;
        font-weight: 600;
    }
    
    .bank-usage {
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .usage-text {
        color: #8b92a5;
        font-size: 0.9rem;
    }
    
    .usage-value {
        color: #fbbf24;
        font-weight: 600;
    }
    
    /* ========== OUTLET GRID ========== */
    .outlet-grid {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        gap: 10px;
    }
    
    .outlet {
        aspect-ratio: 1;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        position: relative;
        border: 2px solid transparent;
    }
    
    .outlet.available {
        background: rgba(16, 185, 129, 0.1);
        border-color: rgba(16, 185, 129, 0.3);
    }
    
    .outlet.available:hover {
        background: rgba(16, 185, 129, 0.2);
        border-color: rgba(16, 185, 129, 0.5);
        transform: scale(1.05);
    }
    
    .outlet.occupied {
        background: rgba(245, 158, 11, 0.1);
        border-color: rgba(245, 158, 11, 0.3);
    }
    
    .outlet.occupied:hover {
        background: rgba(245, 158, 11, 0.2);
        border-color: rgba(245, 158, 11, 0.5);
        transform: scale(1.05);
    }
    
    /* Clickable outlet link styling */
    .outlet-link {
        text-decoration: none;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: inherit;
    }
    
    .outlet-link:hover {
        text-decoration: none;
    }
    
    .outlet-number {
        font-size: 1.2rem;
        font-weight: 600;
        color: #e4e6eb;
        margin-bottom: 4px;
    }
    
    .outlet-status {
        font-size: 0.75rem;
        color: #8b92a5;
    }
    
    .outlet-device {
        font-size: 0.7rem;
        color: #fbbf24;
        text-align: center;
        padding: 0 4px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        width: 100%;
    }
    
    .outlet.occupied:hover .outlet-device {
        color: #fde047;
        text-decoration: underline;
    }
    
    /* ========== LOAD METERS ========== */
    .load-meter {
        margin-top: 20px;
    }
    
    .meter-label {
        color: #8b92a5;
        font-size: 0.85rem;
        margin-bottom: 8px;
        display: flex;
        justify-content: space-between;
    }
    
    .meter-bar {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        height: 20px;
        overflow: hidden;
        position: relative;
    }
    
    .meter-fill {
        height: 100%;
        background: linear-gradient(90deg, #10b981, #fbbf24);
        transition: width 0.3s;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 8px;
    }
    
    .meter-fill.high-load {
        background: linear-gradient(90deg, #fbbf24, #ef4444);
    }
    
    .meter-percentage {
        color: #000;
        font-size: 0.75rem;
        font-weight: 600;
    }
    
    /* ========== CONNECTED DEVICES TABLE ========== */
    .devices-section {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
    }
    
    .section-title {
        color: #f59e0b;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .devices-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .devices-table th {
        background: rgba(245, 158, 11, 0.1);
        color: #fbbf24;
        padding: 12px;
        text-align: left;
        font-weight: 600;
        border-bottom: 2px solid rgba(245, 158, 11, 0.2);
    }
    
    .devices-table td {
        padding: 12px;
        color: #e4e6eb;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    .devices-table tr:hover {
        background: rgba(255, 255, 255, 0.03);
    }
    
    .device-link {
        color: #60a5fa;
        text-decoration: none;
        transition: color 0.2s;
    }
    
    .device-link:hover {
        color: #93bbfc;
        text-decoration: underline;
    }
    
    .connection-type {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .connection-type.primary {
        background: rgba(16, 185, 129, 0.2);
        color: #10b981;
    }
    
    .connection-type.redundant {
        background: rgba(96, 165, 250, 0.2);
        color: #60a5fa;
    }
    
    .btn-disconnect {
        padding: 4px 12px;
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.85rem;
    }
    
    .btn-disconnect:hover {
        background: rgba(239, 68, 68, 0.3);
        border-color: rgba(239, 68, 68, 0.5);
    }
    
    /* ========== ACTION BUTTONS ========== */
    .action-buttons {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
    }
    
    .btn-action {
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: #e4e6eb;
        text-decoration: none;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    
    .btn-action:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.2);
        color: #fff;
    }
    
    .btn-action.primary {
        background: rgba(96, 165, 250, 0.2);
        border-color: rgba(96, 165, 250, 0.3);
        color: #60a5fa;
    }
    
    .btn-action.primary:hover {
        background: rgba(96, 165, 250, 0.3);
        border-color: rgba(96, 165, 250, 0.5);
        color: #93bbfc;
    }
    
    /* ========== QUICK STATS BAR ========== */
    .quick-stats {
        display: flex;
        gap: 30px;
        margin-bottom: 20px;
        padding: 15px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 8px;
    }
    
    .quick-stat {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .quick-stat-icon {
        font-size: 1.5rem;
    }
    
    .quick-stat-info {
        display: flex;
        flex-direction: column;
    }
    
    .quick-stat-label {
        color: #8b92a5;
        font-size: 0.85rem;
    }
    
    .quick-stat-value {
        color: #e4e6eb;
        font-size: 1.1rem;
        font-weight: 600;
    }
    
    /* ========== POWER CALCULATION ========== */
    .power-calc {
        background: rgba(167, 139, 250, 0.1);
        border: 1px solid rgba(167, 139, 250, 0.2);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
    }
    
    .power-calc-title {
        color: #a78bfa;
        font-weight: 600;
        margin-bottom: 10px;
    }
    
    .power-calc-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
    }
    
    .power-item {
        display: flex;
        justify-content: space-between;
        color: #e4e6eb;
        font-size: 0.9rem;
    }
    
    .power-label {
        color: #8b92a5;
    }
    
    .power-value {
        font-weight: 600;
    }
    
    /* ========== TOOLTIP ========== */
    .outlet-tooltip {
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        background: #1a1a1a;
        color: #fff;
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
        white-space: nowrap;
        z-index: 1000;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.2s;
        margin-bottom: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }
    
    .outlet-tooltip::after {
        content: '';
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        border: 6px solid transparent;
        border-top-color: #1a1a1a;
    }
    
    .outlet:hover .outlet-tooltip {
        opacity: 1;
    }
    
    /* ========== RESPONSIVE ========== */
    @media (max-width: 768px) {
        .banks-container {
            grid-template-columns: 1fr;
        }
        
        .pdu-stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .outlet-grid {
            grid-template-columns: repeat(4, 1fr);
        }
        
        .quick-stats {
            flex-direction: column;
            gap: 15px;
        }
    }
</style>
{% endblock %}

{% block content %}
<!-- ========== PDU HEADER ========== -->
<div class="pdu-header">
    <div class="pdu-title-section">
        <div>
            <div class="pdu-title">{{ pdu.identifier }}</div>
            <div class="pdu-location">
                {{ pdu.rack.floor.datacenter.code }} ‚Üí 
                {{ pdu.rack.floor.actual_floor }} ‚Üí 
                Rack {{ pdu.rack.rack_id }}
            </div>
            <div class="pdu-circuit">Circuit: {{ pdu.circuit_id or 'Not Specified' }}</div>
        </div>
        <div class="pdu-actions">
            <a href="{{ url_for('pdus.edit_pdu', pdu_id=pdu.id) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <button class="btn btn-danger" onclick="confirmDelete()">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a href="{{ url_for('pdus.index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>
    
    <!-- ========== PDU STATS GRID ========== -->
    <div class="pdu-stats-grid">
        {% if pdu.model %}
        <div class="stat-item">
            <div class="stat-label">Model</div>
            <div class="stat-value">{{ pdu.model }}</div>
        </div>
        {% endif %}
        
        <div class="stat-item">
            <div class="stat-label">Voltage</div>
            <div class="stat-value">{{ pdu.voltage }}V</div>
        </div>
        
        <div class="stat-item">
            <div class="stat-label">Capacity</div>
            <div class="stat-value">{{ pdu.capacity_amps }}A</div>
        </div>
        
        <div class="stat-item">
            <div class="stat-label">Phase</div>
            <div class="stat-value">{{ pdu.phase }}</div>
        </div>
        
        <div class="stat-item">
            <div class="stat-label">Outlets</div>
            <div class="stat-value">{{ pdu.used_outlets }}/{{ pdu.total_outlets }}</div>
        </div>
        
        <div class="stat-item">
            <div class="stat-label">Circuit</div>
            <div class="stat-value">{{ pdu.circuit_id or 'N/A' }}</div>
        </div>
        
        {% if pdu.ip_address %}
        <div class="stat-item">
            <div class="stat-label">Management IP</div>
            <div class="stat-value">
                <a href="http://{{ pdu.ip_address }}" target="_blank" style="color: #fbbf24;">
                    {{ pdu.ip_address }} <i class="fas fa-external-link-alt"></i>
                </a>
            </div>
        </div>
        {% endif %}
        
        <div class="stat-item">
            <div class="stat-label">Max Power</div>
            <div class="stat-value">{{ pdu.watts_capacity }}W</div>
        </div>
    </div>
</div>

<!-- ========== NOTES SECTION ========== -->
{% if pdu.notes %}
<div class="pdu-notes-section">
    <div class="notes-header">
        <i class="fas fa-sticky-note"></i> Notes
    </div>
    <div class="notes-content">{{ pdu.notes }}</div>
</div>
{% endif %}

<!-- ========== QUICK STATS BAR ========== -->
<div class="quick-stats">
    <div class="quick-stat">
        <div class="quick-stat-icon">‚ö°</div>
        <div class="quick-stat-info">
            <span class="quick-stat-label">Total Capacity</span>
            <span class="quick-stat-value">{{ pdu.capacity_amps }}A @ {{ pdu.voltage }}V</span>
        </div>
    </div>
    
    <div class="quick-stat">
        <div class="quick-stat-icon">üîå</div>
        <div class="quick-stat-info">
            <span class="quick-stat-label">Outlet Usage</span>
            <span class="quick-stat-value">{{ pdu.used_outlets }} of {{ pdu.total_outlets }}</span>
        </div>
    </div>
    
    <div class="quick-stat">
        <div class="quick-stat-icon">‚öñÔ∏è</div>
        <div class="quick-stat-info">
            <span class="quick-stat-label">Load Balance</span>
            <span class="quick-stat-value">B1: {{ bank1_used }} | B2: {{ bank2_used }}</span>
        </div>
    </div>
    
    {% if pdu.available_outlets > 0 %}
    <div class="quick-stat">
        <div class="quick-stat-icon">‚úÖ</div>
        <div class="quick-stat-info">
            <span class="quick-stat-label">Available</span>
            <span class="quick-stat-value">{{ pdu.available_outlets }} outlets</span>
        </div>
    </div>
    {% endif %}
</div>

<!-- ========== POWER CALCULATION ========== -->
{% if connected_devices %}
<div class="power-calc">
    <div class="power-calc-title">Power Utilization Estimate</div>
    <div class="power-calc-content">
        <div class="power-item">
            <span class="power-label">Connected Devices:</span>
            <span class="power-value">{{ connected_devices|length }}</span>
        </div>
        <div class="power-item">
            <span class="power-label">Est. Load (per device):</span>
            <span class="power-value">~150W</span>
        </div>
        <div class="power-item">
            <span class="power-label">Est. Total Load:</span>
            <span class="power-value">~{{ connected_devices|length * 150 }}W</span>
        </div>
        <div class="power-item">
            <span class="power-label">Est. Current Draw:</span>
            <span class="power-value">~{{ "%.1f"|format((connected_devices|length * 150) / pdu.voltage) }}A</span>
        </div>
    </div>
</div>
{% endif %}

<!-- ========== ACTION BUTTONS ========== -->
<div class="action-buttons">
    <a href="#" class="btn-action primary" onclick="quickConnect(); return false;">
        <i class="fas fa-plus-circle"></i> Quick Connect Device
    </a>
    <a href="#" class="btn-action" onclick="balanceLoad(); return false;">
        <i class="fas fa-balance-scale"></i> Balance Load
    </a>
    <a href="#" class="btn-action" onclick="exportPDUInfo(); return false;">
        <i class="fas fa-download"></i> Export Info
    </a>
    <a href="{{ url_for('pdus.api_pdu_stats', pdu_id=pdu.id) }}" class="btn-action" target="_blank">
        <i class="fas fa-code"></i> View JSON
    </a>
</div>

<!-- ========== OUTLET BANKS ========== -->
<div class="banks-container">
    <!-- Bank 1 (Outlets 1-12) -->
    <div class="bank-card">
        <div class="bank-header">
            <div class="bank-title">Bank 1 (Outlets 1-12)</div>
            <div class="bank-usage">
                <span class="usage-text">Used:</span>
                <span class="usage-value">{{ bank1_used }}/12</span>
            </div>
        </div>
        
        <div class="outlet-grid">
            {% for outlet_num in range(1, 13) %}
            <div class="outlet {{ 'occupied' if outlet_num in outlet_map else 'available' }}" 
                 data-outlet="{{ outlet_num }}">
                {% if outlet_num in outlet_map %}
                    <!-- Occupied outlet - make it clickable -->
                    <a href="{{ url_for('network_devices.edit_device', device_id=outlet_map[outlet_num]['device_id']) }}" 
                       class="outlet-link">
                        <div class="outlet-number">{{ outlet_num }}</div>
                        <div class="outlet-device">{{ outlet_map[outlet_num]['device'] }}</div>
                    </a>
                    <div class="outlet-tooltip">
                        {{ outlet_map[outlet_num]['device'] }} ({{ outlet_map[outlet_num]['connection'] }})
                        <br>Click to view device
                    </div>
                {% else %}
                    <!-- Available outlet -->
                    <div class="outlet-number">{{ outlet_num }}</div>
                    <div class="outlet-status">Open</div>
                    <div class="outlet-tooltip">Click to connect device</div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        
        <div class="load-meter">
            <div class="meter-label">
                <span>Bank 1 Load</span>
                <span>{{ bank1_used }}/12 outlets</span>
            </div>
            <div class="meter-bar">
                <div class="meter-fill {{ 'high-load' if (bank1_used/12*100) > 80 else '' }}" 
                     style="width: {{ (bank1_used/12*100)|round|int }}%">
                    <span class="meter-percentage">{{ (bank1_used/12*100)|round|int }}%</span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bank 2 (Outlets 13-24) -->
    <div class="bank-card">
        <div class="bank-header">
            <div class="bank-title">Bank 2 (Outlets 13-24)</div>
            <div class="bank-usage">
                <span class="usage-text">Used:</span>
                <span class="usage-value">{{ bank2_used }}/12</span>
            </div>
        </div>
        
        <div class="outlet-grid">
            {% for outlet_num in range(13, 25) %}
            <div class="outlet {{ 'occupied' if outlet_num in outlet_map else 'available' }}"
                 data-outlet="{{ outlet_num }}">
                {% if outlet_num in outlet_map %}
                    <!-- Occupied outlet - make it clickable -->
                    <a href="{{ url_for('network_devices.edit_device', device_id=outlet_map[outlet_num]['device_id']) }}" 
                       class="outlet-link">
                        <div class="outlet-number">{{ outlet_num }}</div>
                        <div class="outlet-device">{{ outlet_map[outlet_num]['device'] }}</div>
                    </a>
                    <div class="outlet-tooltip">
                        {{ outlet_map[outlet_num]['device'] }} ({{ outlet_map[outlet_num]['connection'] }})
                        <br>Click to view device
                    </div>
                {% else %}
                    <!-- Available outlet -->
                    <div class="outlet-number">{{ outlet_num }}</div>
                    <div class="outlet-status">Open</div>
                    <div class="outlet-tooltip">Click to connect device</div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        
        <div class="load-meter">
            <div class="meter-label">
                <span>Bank 2 Load</span>
                <span>{{ bank2_used }}/12 outlets</span>
            </div>
            <div class="meter-bar">
                <div class="meter-fill {{ 'high-load' if (bank2_used/12*100) > 80 else '' }}" 
                     style="width: {{ (bank2_used/12*100)|round|int }}%">
                    <span class="meter-percentage">{{ (bank2_used/12*100)|round|int }}%</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ========== CONNECTED DEVICES ========== -->
<div class="devices-section">
    <div class="section-title">
        <i class="fas fa-plug"></i> Connected Devices
    </div>
    
    {% if connected_devices %}
    <table class="devices-table">
        <thead>
            <tr>
                <th>Device</th>
                <th>Type</th>
                <th>Outlet</th>
                <th>Connection</th>
                <th>Power (W)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for device in connected_devices %}
            <tr>
                <td>
                    <a href="{{ url_for('network_devices.edit_device', device_id=device.id) }}" 
                       class="device-link">
                        {{ device.identifier }}
                    </a>
                </td>
                <td>{{ device.device_type }}</td>
                <td>
                    {% if device.pdu_1_id == pdu.id %}
                        {{ device.pdu_1_outlet }}
                    {% elif device.pdu_2_id == pdu.id %}
                        {{ device.pdu_2_outlet }}
                    {% endif %}
                </td>
                <td>
                    {% if device.pdu_1_id == pdu.id %}
                        <span class="connection-type primary">Primary</span>
                    {% else %}
                        <span class="connection-type redundant">Redundant</span>
                    {% endif %}
                </td>
                <td>{{ device.power_consumption or 'N/A' }}</td>
                <td>
                    <button class="btn-disconnect" onclick="disconnectDevice({{ device.id }})">
                        Disconnect
                    </button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p style="color: #8b92a5; text-align: center; padding: 20px;">
        No devices currently connected to this PDU
    </p>
    {% endif %}
</div>

{% endblock %}

