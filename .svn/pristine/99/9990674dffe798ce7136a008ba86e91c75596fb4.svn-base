function balanceLoad() {
    const bank1 = {{ bank1_used }};
    const bank2 = {{ bank2_used }};
    
    if (Math.abs(bank1 - bank2) <= 1) {
        alert('Load is already balanced! Bank 1: ' + bank1 + ', Bank 2: ' + bank2);
    } else {
        alert('Load balancing suggestions:\nBank 1: ' + bank1 + ' outlets\nBank 2: ' + bank2 + ' outlets\n\nConsider moving devices from Bank ' + (bank1 > bank2 ? '1' : '2') + ' to Bank ' + (bank1 > bank2 ? '2' : '1'));
    }
}

function exportPDUInfo() {
    const info = {
        pdu: '{{ pdu.identifier }}',
        location: '{{ pdu.rack.rack_id }}',
        model: '{{ pdu.model or "N/A" }}',
        voltage: {{ pdu.voltage }},
        capacity: {{ pdu.capacity_amps }},
        outlets_used: {{ pdu.used_outlets }},
        outlets_total: {{ pdu.total_outlets }},
        bank1_used: {{ bank1_used }},
        bank2_used: {{ bank2_used }}
    };
    
    const dataStr = JSON.stringify(info, null, 2);
    const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
    
    const exportFileDefaultName = 'pdu_{{ pdu.identifier }}_info.json';
    
    const linkElement = document.createElement('a');
    linkElement.setAttribute('href', dataUri);
    linkElement.setAttribute('download', exportFileDefaultName);
    linkElement.click();
}

