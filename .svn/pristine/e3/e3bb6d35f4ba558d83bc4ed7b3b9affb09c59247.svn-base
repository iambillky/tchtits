{% extends "base.html" %}

{% block title %}Edit Data Center{% endblock %}

{% block extra_css %}
<style>
    /* ========== FORM CONTAINER ========== */
    .form-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .form-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 30px;
    }
    
    /* ========== DC INFO BAR ========== */
    .dc-info-bar {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(96, 165, 250, 0.05));
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .dc-info-content {
        flex: 1;
    }
    
    .dc-current-code {
        color: #60a5fa;
        font-size: 2rem;
        font-weight: 700;
        font-family: 'Courier New', monospace;
        margin-bottom: 5px;
    }
    
    .dc-current-name {
        color: #e4e6eb;
        font-size: 1.1rem;
    }
    
    .dc-stats {
        text-align: right;
    }
    
    .dc-stat-item {
        color: #8b92a5;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }
    
    .dc-stat-value {
        color: #60a5fa;
        font-weight: 600;
    }
    
    /* ========== FORM GROUPS ========== */
    .form-group {
        margin-bottom: 25px;
    }
    
    .form-label {
        display: block;
        color: #e4e6eb;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }
    
    .form-label .required {
        color: #ef4444;
        margin-left: 3px;
    }
    
    /* ========== FORM CONTROLS ========== */
    .form-control {
        width: 100%;
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 8px;
        padding: 10px 14px;
        color: #fff;
        font-size: 1rem;
        transition: all 0.2s ease;
    }
    
    .form-control:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.1);
        border-color: #60a5fa;
        box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.1);
    }
    
    .form-control::placeholder {
        color: #6b7280;
    }
    
    .form-control:disabled {
        background: rgba(255, 255, 255, 0.03);
        border-color: rgba(255, 255, 255, 0.08);
        color: #6b7280;
        cursor: not-allowed;
    }
    
    textarea.form-control {
        resize: vertical;
        min-height: 100px;
        font-family: inherit;
    }
    
    /* ========== VALIDATION FEEDBACK ========== */
    .invalid-feedback {
        display: block;
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: 5px;
    }
    
    .form-control.is-invalid {
        border-color: #ef4444;
    }
    
    .form-control.is-invalid:focus {
        border-color: #ef4444;
        box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
    }
    
    /* ========== HELP TEXT ========== */
    .form-text {
        display: block;
        color: #8b92a5;
        font-size: 0.875rem;
        margin-top: 5px;
    }
    
    /* ========== WARNING BOX ========== */
    .warning-box {
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.2);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 25px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }
    
    .warning-icon {
        color: #f59e0b;
        font-size: 1.2rem;
        flex-shrink: 0;
    }
    
    .warning-content {
        flex: 1;
        color: #fbbf24;
        font-size: 0.95rem;
    }
    
    /* ========== FORM SECTIONS ========== */
    .form-section {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin-top: 30px;
        padding-top: 25px;
    }
    
    .form-section-title {
        color: #60a5fa;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 20px;
    }
    
    /* ========== BUTTON GROUP ========== */
    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .btn-success {
        background: linear-gradient(135deg, #10b981, #059669);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
        cursor: pointer;
    }
    
    .btn-success:hover {
        background: linear-gradient(135deg, #059669, #047857);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }
    
    .btn-cancel {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #e4e6eb;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
        text-decoration: none;
        cursor: pointer;
    }
    
    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.15);
        color: #fff;
        border-color: rgba(255, 255, 255, 0.3);
        text-decoration: none;
    }
    
    .btn-danger {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
        cursor: pointer;
        margin-left: auto;
    }
    
    .btn-danger:hover {
        background: linear-gradient(135deg, #dc2626, #b91c1c);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }
    
    /* ========== RESPONSIVE GRID ========== */
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }
    
    @media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
        }
        
        .dc-info-bar {
            flex-direction: column;
            text-align: center;
        }
        
        .dc-stats {
            text-align: center;
            margin-top: 20px;
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1 class="page-title">Edit Data Center</h1>
    <p class="page-subtitle">Modify data center configuration</p>
</div>

<!-- ========== DC INFO BAR ========== -->
<div class="dc-info-bar">
    <div class="dc-info-content">
        <div class="dc-current-code">{{ dc.code }}</div>
        <div class="dc-current-name">{{ dc.name }}</div>
    </div>
    <div class="dc-stats">
        <div class="dc-stat-item">
            Floors: <span class="dc-stat-value">{{ dc.floors.count() }}</span>
        </div>
        <div class="dc-stat-item">
            Racks: <span class="dc-stat-value">{{ dc.rack_count }}</span>
        </div>
        <div class="dc-stat-item">
            Total Capacity: <span class="dc-stat-value">{{ dc.total_u_capacity }}U</span>
        </div>
    </div>
</div>

<div class="form-container">
    <div class="form-card">
        {% if has_infrastructure %}
        <!-- ========== WARNING MESSAGE ========== -->
        <div class="warning-box">
            <span class="warning-icon">‚ö†Ô∏è</span>
            <div class="warning-content">
                <strong>Limited Editing:</strong> This data center has floors and racks configured. 
                The DC code cannot be changed as it would break existing rack IDs (e.g., {{ dc.code }}-G01.01).
                To change the code, you must first delete all racks and floors.
            </div>
        </div>
        {% endif %}
        
        <form method="POST" action="{{ url_for('datacenters.edit_datacenter', dc_id=dc.id) }}" novalidate>
            {{ form.hidden_tag() }}
            
            <!-- ========== BASIC INFORMATION ========== -->
            <div class="form-row">
                <div class="form-group">
                    <label for="{{ form.code.id }}" class="form-label">
                        DC Code <span class="required">*</span>
                    </label>
                    {{ form.code(class="form-control" + (" is-invalid" if form.code.errors else ""), 
                                disabled=has_infrastructure) }}
                    {% if has_infrastructure %}
                    <small class="form-text">Cannot be changed - floors/racks exist</small>
                    {% else %}
                    <small class="form-text">3-letter identifier (e.g., SFJ, LAX)</small>
                    {% endif %}
                    {% if form.code.errors %}
                        {% for error in form.code.errors %}
                            <div class="invalid-feedback">{{ error }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
                
                <div class="form-group">
                    <label for="{{ form.name.id }}" class="form-label">
                        Data Center Name <span class="required">*</span>
                    </label>
                    {{ form.name(class="form-control" + (" is-invalid" if form.name.errors else "")) }}
                    <small class="form-text">Full descriptive name</small>
                    {% if form.name.errors %}
                        {% for error in form.name.errors %}
                            <div class="invalid-feedback">{{ error }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            
            <!-- ========== LOCATION INFORMATION ========== -->
            <div class="form-section">
                <h3 class="form-section-title">Location & Contact</h3>
                
                <div class="form-group">
                    <label for="{{ form.address.id }}" class="form-label">Address</label>
                    {{ form.address(class="form-control") }}
                    {% if form.address.errors %}
                        {% for error in form.address.errors %}
                            <div class="invalid-feedback">{{ error }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="{{ form.contact_phone.id }}" class="form-label">Contact Phone</label>
                        {{ form.contact_phone(class="form-control" + (" is-invalid" if form.contact_phone.errors else "")) }}
                        {% if form.contact_phone.errors %}
                            {% for error in form.contact_phone.errors %}
                                <div class="invalid-feedback">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        <label for="{{ form.contact_email.id }}" class="form-label">Contact Email</label>
                        {{ form.contact_email(class="form-control" + (" is-invalid" if form.contact_email.errors else "")) }}
                        {% if form.contact_email.errors %}
                            {% for error in form.contact_email.errors %}
                                <div class="invalid-feedback">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- ========== ADDITIONAL NOTES ========== -->
            <div class="form-section">
                <h3 class="form-section-title">Additional Information</h3>
                
                <div class="form-group">
                    <label for="{{ form.notes.id }}" class="form-label">Notes</label>
                    {{ form.notes(class="form-control") }}
                    <small class="form-text">Any additional information about this data center</small>
                    {% if form.notes.errors %}
                        {% for error in form.notes.errors %}
                            <div class="invalid-feedback">{{ error }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            
            <!-- ========== ACTION BUTTONS ========== -->
            <div class="button-group">
                <button type="submit" class="btn btn-success">
                    <span style="margin-right: 8px;">üíæ</span> Save Changes
                </button>
                <a href="{{ url_for('datacenters.list_datacenters') }}" class="btn btn-cancel">
                    <span style="margin-right: 8px;">‚úï</span> Cancel
                </a>
                
                {% if not has_infrastructure %}
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                    <span style="margin-right: 8px;">üóëÔ∏è</span> Delete Data Center
                </button>
                {% endif %}
            </div>
        </form>
        
        <!-- Hidden delete form -->
        {% if not has_infrastructure %}
        <form id="deleteForm" method="POST" action="{{ url_for('datacenters.delete_datacenter', dc_id=dc.id) }}" style="display: none;">
        </form>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
// ========== AUTO-UPPERCASE DC CODE ==========
{% if not has_infrastructure %}
document.getElementById('{{ form.code.id }}').addEventListener('input', function(e) {
    e.target.value = e.target.value.toUpperCase();
});
{% endif %}

// ========== FORM VALIDATION FEEDBACK ==========
document.querySelectorAll('.form-control').forEach(function(input) {
    input.addEventListener('input', function() {
        if (this.classList.contains('is-invalid')) {
            this.classList.remove('is-invalid');
            // Hide error messages for this field
            const feedback = this.parentElement.querySelectorAll('.invalid-feedback');
            feedback.forEach(function(msg) {
                msg.style.display = 'none';
            });
        }
    });
});

// ========== DELETE CONFIRMATION ==========
{% if not has_infrastructure %}
function confirmDelete() {
    if (confirm('Are you sure you want to delete data center {{ dc.code }}? This action cannot be undone.')) {
        document.getElementById('deleteForm').submit();
    }
}
{% endif %}
</script>
{% endblock %}