</div>

<!-- ========== NOTES SECTION ========== -->
{% if pdu.notes %}
<div class="pdu-notes-section">
    <div class="notes-header">
        <i class="fas fa-sticky-note"></i> Notes
    </div>
    <div class="notes-content">{{ pdu.notes }}</div>
</div>
{% endif %}

<!-- ========== POWER CALCULATION - MODERNIZED WITH BANK LOADS ========== -->
{% if connected_devices %}
<div class="power-calc">
    <div class="power-calc-title">⚡ Power Utilization Estimate</div>
    <div class="power-calc-content">
        <div class="power-metric">
            <div class="power-metric-label">
                🔌 Connected Devices
            </div>
            <div class="power-metric-value">
                {{ connected_devices|length }}
                <span class="power-metric-unit">devices</span>
            </div>
        </div>
        
        <div class="power-metric">
            <div class="power-metric-label">
                📊 Est. Load per Device
            </div>
            <div class="power-metric-value">
                ~150
                <span class="power-metric-unit">W</span>
            </div>
            <div class="power-metric-note">Average consumption</div>
        </div>
        
        <div class="power-metric">
            <div class="power-metric-label">
                💪 Est. Total Load
            </div>
            <div class="power-metric-value">
                ~{{ connected_devices|length * 150 }}
                <span class="power-metric-unit">W</span>
            </div>
            <div class="power-metric-note">All devices combined</div>
        </div>
        
        <div class="power-metric">
            <div class="power-metric-label">
                ⚡ Est. Current Draw
            </div>
            <div class="power-metric-value">
                ~{{ "%.1f"|format((connected_devices|length * 150) / pdu.voltage) }}
                <span class="power-metric-unit">A</span>
            </div>
            <div class="power-metric-note">{{ "%.0f"|format(((connected_devices|length * 150) / pdu.voltage) / pdu.capacity_amps * 100) }}% of capacity</div>
        </div>
        
        <!-- Bank Load Visualizations -->
        <div class="power-metric bank-load-metric">
            <div class="power-metric-label">
                🏦 Bank 1 Load
            </div>
            <div class="bank-load-label">
                <span>Outlets Used</span>
                <span>{{ bank1_used }}/12</span>
            </div>
            <div class="mini-meter">
                <div class="mini-meter-fill bank1 {{ 'high' if (bank1_used/12*100) > 80 else '' }}" 
                     style="width: {{ (bank1_used/12*100)|round|int }}%">
                    {{ (bank1_used/12*100)|round|int }}%
                </div>
            </div>
        </div>
        
        <div class="power-metric bank-load-metric">
            <div class="power-metric-label">
                🏦 Bank 2 Load
            </div>
            <div class="bank-load-label">
                <span>Outlets Used</span>
                <span>{{ bank2_used }}/12</span>
            </div>
            <div class="mini-meter">
                <div class="mini-meter-fill bank2 {{ 'high' if (bank2_used/12*100) > 80 else '' }}" 
                     style="width: {{ (bank2_used/12*100)|round|int }}%">
                    {{ (bank2_used/12*100)|round|int }}%
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<!-- ========== OUTLET BANKS ========== -->
<div class="banks-container">
    <!-- Bank 1 (Outlets 1-12) -->
    <div class="bank-card">
        <div class="bank-header">
            <div class="bank-title">Bank 1 (Outlets 1-12)</div>
            <div class="bank-usage">
                <span class="usage-text">Used:</span>
                <span class="usage-value">{{ bank1_used }}/12</span>
            </div>
        </div>
        
        <div class="outlet-grid">
            {% for outlet_num in range(1, 13) %}
            <div class="outlet {{ 'occupied' if outlet_num in outlet_map else 'available' }}" 
                 data-outlet="{{ outlet_num }}">
                {% if outlet_num in outlet_map %}
                    <!-- Occupied outlet - make it clickable -->
                    <a href="{{ url_for('network_devices.edit_device', device_id=outlet_map[outlet_num]['device_id']) }}" 
                       class="outlet-link">
                        <div class="outlet-number">{{ outlet_num }}</div>
                        <div class="outlet-device">{{ outlet_map[outlet_num]['device'] }}</div>
                    </a>
                    <div class="outlet-tooltip">
                        {{ outlet_map[outlet_num]['device'] }} ({{ outlet_map[outlet_num]['connection'] }})
                        <br>Click to view device
                    </div>
                {% else %}
                    <!-- Available outlet -->
                    <div class="outlet-number">{{ outlet_num }}</div>
                    <div class="outlet-status">Open</div>
                    <div class="outlet-tooltip">Click to connect device</div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        
        <div class="load-meter">
            <div class="meter-label">
                <span>Bank 1 Load</span>
                <span>{{ bank1_used }}/12 outlets</span>
            </div>
            <div class="meter-bar">
                <div class="meter-fill {{ 'high-load' if (bank1_used/12*100) > 80 else '' }}" 
                     style="width: {{ (bank1_used/12*100)|round|int }}%">
                    <span class="meter-percentage">{{ (bank1_used/12*100)|round|int }}%</span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bank 2 (Outlets 13-24) -->
    <div class="bank-card">
        <div class="bank-header">
            <div class="bank-title">Bank 2 (Outlets 13-24)</div>
            <div class="bank-usage">
                <span class="usage-text">Used:</span>
                <span class="usage-value">{{ bank2_used }}/12</span>
            </div>
        </div>
        
        <div class="outlet-grid">
            {% for outlet_num in range(13, 25) %}
            <div class="outlet {{ 'occupied' if outlet_num in outlet_map else 'available' }}"
                 data-outlet="{{ outlet_num }}">
                {% if outlet_num in outlet_map %}
                    <!-- Occupied outlet - make it clickable -->
                    <a href="{{ url_for('network_devices.edit_device', device_id=outlet_map[outlet_num]['device_id']) }}" 
                       class="outlet-link">
                        <div class="outlet-number">{{ outlet_num }}</div>
                        <div class="outlet-device">{{ outlet_map[outlet_num]['device'] }}</div>
                    </a>
                    <div class="outlet-tooltip">
                        {{ outlet_map[outlet_num]['device'] }} ({{ outlet_map[outlet_num]['connection'] }})
                        <br>Click to view device
                    </div>
                {% else %}
                    <!-- Available outlet -->
                    <div class="outlet-number">{{ outlet_num }}</div>
                    <div class="outlet-status">Open</div>
                    <div class="outlet-tooltip">Click to connect device</div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        
        <div class="load-meter">
            <div class="meter-label">
                <span>Bank 2 Load</span>
                <span>{{ bank2_used }}/12 outlets</span>
            </div>
            <div class="meter-bar">
                <div class="meter-fill {{ 'high-load' if (bank2_used/12*100) > 80 else '' }}" 
                     style="width: {{ (bank2_used/12*100)|round|int }}%">
                    <span class="meter-percentage">{{ (bank2_used/12*100)|round|int }}%</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ========== CONNECTED DEVICES ========== -->
<div class="devices-section">
    <div class="section-title">
        <i class="fas fa-plug"></i> Connected Devices
    </div>
    
    {% if connected_devices %}
    <table class="devices-table">
        <thead>
            <tr>
                <th>Device</th>
                <th>Type</th>
                <th>Outlet</th>
                <th>Connection</th>
                <th>Power (W)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for device in connected_devices %}
            <tr>
                <td>
                    <a href="{{ url_for('network_devices.edit_device', device_id=device.id) }}" 
                       class="device-link">
                        {{ device.identifier }}
                    </a>
                </td>
                <td>{{ device.device_type }}</td>
                <td>
                    {% if device.pdu_1_id == pdu.id %}
                        {{ device.pdu_1_outlet }}
                    {% elif device.pdu_2_id == pdu.id %}
                        {{ device.pdu_2_outlet }}
                    {% endif %}
                </td>
                <td>
                    {% if device.pdu_1_id == pdu.id %}
                        <span class="connection-type primary">Primary</span>
                    {% else %}
                        <span class="connection-type redundant">Redundant</span>
                    {% endif %}
                </td>
                <td>{{ device.power_consumption or 'N/A' }}</td>
                <td>
                    <button class="btn-disconnect" onclick="disconnectDevice({{ device.id }})">
                        Disconnect
                    </button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p style="color: #8b92a5; text-align: center; padding: 20px;">
        No devices currently connected to this PDU
    </p>
    {% endif %}
</div>

{% endblock %}

{% block extra_js %}
<script>
// Breadcrumb dropdown handler
document.addEventListener('DOMContentLoaded', function() {
    const dropdown = document.querySelector('.dropdown');
    const toggle = document.querySelector('.dropdown-toggle');
    
    if (toggle) {
        toggle.addEventListener('click', function(e) {
            e.stopPropagation();
            dropdown.classList.toggle('active');
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function() {
            dropdown.classList.remove('active');
        });
        
        // Prevent dropdown from closing when clicking inside
        const dropdownMenu = document.querySelector('.dropdown-menu');
        if (dropdownMenu) {
            dropdownMenu.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        }
    }
});

function confirmDelete() {
    if (confirm('Are you sure you want to delete PDU {{ pdu.identifier }}? This action cannot be undone.')) {
        fetch('{{ url_for("pdus.delete_pdu", pdu_id=pdu.id) }}', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.href = '{{ url_for("pdus.index") }}';
            } else {
                alert('Error: ' + data.message);
            }
        });
    }
}

function disconnectDevice(deviceId) {
    if (confirm('Disconnect this device from the PDU?')) {
        // TODO: Implement disconnect functionality
        alert('Disconnect functionality to be implemented');
    }
}

function quickConnect() {
    // TODO: Implement quick connect modal
    alert('Quick connect feature coming soon!');
}

function balanceLoad() {
    const bank1 = {{ bank1_used }};
    const bank2 = {{ bank2_used }};
    
    if (Math.abs(bank1 - bank2) <= 1) {
        alert('Load is already balanced! Bank 1: ' + bank1 + ', Bank 2: ' + bank2);
    } else {
        alert('Load balancing suggestions:\nBank 1: ' + bank1 + ' outlets\nBank 2: ' + bank2 + ' outlets\n\nConsider moving devices from Bank ' + (bank1 > bank2 ? '1' : '2') + ' to Bank ' + (bank1 > bank2 ? '2' : '1'));
    }
}

function exportPDUInfo() {
    const info = {
        pdu: '{{ pdu.identifier }}',
        location: '{{ pdu.rack.rack_id }}',
        model: '{{ pdu.model or "N/A" }}',
        voltage: {{ pdu.voltage }},
        capacity: {{ pdu.capacity_amps }},
        outlets_used: {{ pdu.used_outlets }},
        outlets_total: {{ pdu.total_outlets }},
        bank1_used: {{ bank1_used }},
        bank2_used: {{ bank2_used }}
    };
    
    const dataStr = JSON.stringify(info, null, 2);
    const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
    
    const exportFileDefaultName = 'pdu_{{ pdu.identifier }}_info.json';
    
    const linkElement = document.createElement('a');
    linkElement.setAttribute('href', dataUri);
    linkElement.setAttribute('download', exportFileDefaultName);
    linkElement.click();
}

// Outlet click handler for available outlets only
document.querySelectorAll('.outlet.available').forEach(outlet => {
    outlet.addEventListener('click', function() {
        const outletNum = this.dataset.outlet;
        console.log('Clicked available outlet:', outletNum);
        // TODO: Open device connection modal
    });
});
</script>
